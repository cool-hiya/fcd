extends ../popup/popup.pug 

include ../input/input.pug
include ../arrow-button/arrow-button.pug
include ../toxin-check/toxin-check.pug

block header
    p.title._h1 Войти

block content
    .popup-signin
        form
            +input({class:'popup-signin__field', type: 'email', placeholder: 'Email'})
            +input({class:'popup-signin__field', type: 'password', placeholder: 'Пароль'})
            +arrow-button({text: 'Войти'})
        +toxin-check({action: 'Создать', href: '#'})
